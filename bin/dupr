#!/bin/sh
set -e

usage () {
	echo "-- Dasteriskian User Package Repo Kit --"
	echo "Usage: $0 action [args]"
	echo ""
	echo "Actions"
	echo "   build <.durpkg file>    Build .deb packages from .durpkg file."
	echo "   help                    Print this usage information"
}

case "$1" in
	fetch)
		fetch-collections ;;
	search)
		shift
		grep -ri $1 ;;
	build)
		shift
		unfold -f $1
		bash $1.sh
		;;
	*)
		usage;;
esac
